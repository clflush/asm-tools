#!/usr/sbin/sed -f
#
# Copyright (C) 2014 Eric Schulte
# Licensed under the Gnu Public License Version 3 or later
#
# Instrument an assembly program to print trace data suitible for
# input into dig.
#
# dig wants it's input of the form
#
# 	x	y	z
# pt1	1	2	0
# pt2	2	4	0
#
# TODO: print some of the heap variables as well.
#
1i\
	.macro ___save\
	mov     %rax, ___dig_rax\
	mov     %rbx, ___dig_rbx\
	mov     %rcx, ___dig_rcx\
	mov     %rdx, ___dig_rdx\
	mov     %rsi, ___dig_rsi\
	mov     %rdi, ___dig_rdi\
	mov     %r8,  ___dig_r8\
	mov     %r9,  ___dig_r9\
	mov     %r10, ___dig_r10\
	mov     %r11, ___dig_r11\
	mov     %r12, ___dig_r12\
	mov     %r13, ___dig_r13\
	mov     %r14, ___dig_r14\
	mov     %r15, ___dig_r15\
	.endm\
	.macro ___restore\
	mov     ___dig_r15, %r15\
	mov     ___dig_r14, %r14\
	mov     ___dig_r13, %r13\
	mov     ___dig_r12, %r12\
	mov     ___dig_r11, %r11\
	mov     ___dig_r10, %r10\
	mov     ___dig_r9,  %r9\
	mov     ___dig_r8,  %r8\
	mov     ___dig_rdi, %rdi\
	mov     ___dig_rsi, %rsi\
	mov     ___dig_rdx, %rdx\
	mov     ___dig_rcx, %rcx\
	mov     ___dig_rbx, %rbx\
	mov     ___dig_rax, %rax\
	.endm\
	.macro ___print value, length\
	mov     \\value, %rsi\
	mov     $1, %rax         # write system call\
	mov     $2, %rdi         # STDERR file descriptor\
	mov     $\\length, %rdx  # length\
	syscall\
	.endm\
	.macro ___dig name\
	___save\
	___print        $___dig_\\name, ___dig_length_\\name\
	___print        $___dig_rax, 4\
	___print        $___dig_rbx, 4\
	___print        $___dig_rcx, 4\
	___print        $___dig_rdx, 4\
	___print        $___dig_rsi, 4\
	___print        $___dig_rdi, 4\
	___print        $___dig_r8,  4\
	___print        $___dig_r9,  4\
	___print        $___dig_r10, 4\
	___print        $___dig_r11, 4\
	___print        $___dig_r12, 4\
	___print        $___dig_r13, 4\
	___print        $___dig_r14, 4\
	___print        $___dig_r15, 4\
	___print        $___dig_n, 1\
	___restore\
	.endm

# save all labels, and print an appropriate macro invocation
/^[^[:space:]]\+:/{
p;
s/\(^[^[:space:]]\+\):/	___dig  \1/;
p;
s/^	___dig  \([^[:space:]]\+\)/___dig_\1:\n\t.ascii\t"\1:"\n\t.set\t___dig_length_\1, .-___dig_\1/;
H;d
}

# print out the data sections
${i\
	.section        .data\
___dig_rax:     .quad 0\
___dig_rbx:     .quad 0\
___dig_rcx:     .quad 0\
___dig_rdx:     .quad 0\
___dig_rsi:     .quad 0\
___dig_rdi:     .quad 0\
___dig_r8:      .quad 0\
___dig_r9:      .quad 0\
___dig_r10:     .quad 0\
___dig_r11:     .quad 0\
___dig_r12:     .quad 0\
___dig_r13:     .quad 0\
___dig_r14:     .quad 0\
___dig_r15:     .quad 0\
	.section	.rodata\
___dig_n:	.ascii "\\n"

# including all cached label strings
g}
